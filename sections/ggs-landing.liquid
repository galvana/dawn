    <div id="social" style="font-size: 15pt; margin-top: 40px; display: flex">
    	<div style="line-height: 30px; margin-right: 5px">Follow us on</div>
    	<div class="social-icon"><img src="{{ 'instagram.png' | asset_img_url: '256x' }}" style="height: 30px; margin-right: 5px"/></div>
    	<div class="social-icon"><img src="{{ 'youtube.png' | asset_img_url: '256x' }}" style="height: 30px; margin-right: 5px"/></div>
    	<div class="social-icon"><img src="{{ 'etsy.png' | asset_img_url: '256x' }}" style="height: 30px; margin-right: 5px"/></div>
