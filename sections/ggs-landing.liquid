<style>
  	.gradient {
		background-image: url({{ 'hexagons.png' | asset_img_url: '1024x' }});
		background-position: right 0% bottom 0%;
      	background-size: contain;
  		background-repeat: no-repeat;
    }
  
  	@media(max-width: 600px) {
      .gradient {
        background-image: url({{ 'mobile-hexagons.png' | asset_img_url: '1024x' }});
        background-position: bottom;
        background-size: cover;
      }
    }
  
  	.contents {
		margin-left: 50px;
		margin-right: 50px;
	}

    #description {
    	width: 40%;
    }

	@media(max-width: 600px) {
		.contents {
			padding-top: 45px;
		}

    	#heading {
        	text-align: center;
		}

		#description {
			width: 100%;
			text-align: center;
		}

		#social {
			justify-content: center;
		}

		.container {
			background-image: none !important;
		}
	}
</style>
